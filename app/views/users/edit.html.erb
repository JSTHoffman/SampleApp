<h1>Edit User</h1>

<%= form_for(@user) do |form| %>
  <%= render 'shared/error_messages', :object => form.object %>
    <%= render 'fields', :form => form %>
  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <%= link_to "Change", "http://gravatar.com/emails", :target => "_blank" %>
</div>